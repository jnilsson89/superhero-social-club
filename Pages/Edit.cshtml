@page
@model SuperheroSocialClub.Pages.EditModel
@{
}
@{
    ViewData["Title"] = "Edit details";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form method="post">
        <div class="mb-3">
            <label for="id" class="form-label">Superhero</label>
            <select class="form-select w-25" aria-label="Default select example" asp-for="@Model.Superhero.Id">
                <option selected>Open this select menu</option>
                @foreach (var hero in Data.SuperheroDb.Superheroes)
                {
                    <option value="@hero.Id">@hero.SuperheroName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">New Superhero Name</label>
            <input type="text" class="form-control w-25" id="superheroName" asp-for="@Model.Superhero.SuperheroName" />
        </div>
        <div class="mb-3">
            <label for="secretIdentity" class="form-label">Secret Identity</label>
            <input type="text" class="form-control w-25" id="secretIdentity" asp-for="@Model.Superhero.SecretIdentity" />
        </div>
        <div class="mb-3">
            <label for="superpower" class="form-label">Superpower</label>
            <input type="text" class="form-control w-25" id="superpower" asp-for="@Model.Superhero.Superpower" />
        </div>
        <button class="btn btn-danger" type="submit">Update</button>
    </form>
</div>